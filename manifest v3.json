{
    "manifest_version": 3,
    "name": "YouTube MrBeastify",
    "version": "1.7.8",
    "icons": {
        "96": "icon.png"
    },
    "description": "Modify YouTube thumbnails to include MrBeast",
    "action": {
        "default_popup": "settings.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": ["*://*.youtube.com/*"],
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["mrbeastify.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [{
        "resources": [
            "images/*.png",
            "images/*.json"
        ],
        "matches": [
            "*://*/*"
        ]
    }]
}